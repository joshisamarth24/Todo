<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyToDo</title>
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <div class="link-holder">
        <a href="/today">Today</a>
        <a href="/work">Work</a>
    </div>
    <div class="main-div">

        <h1 class="day-holder"></h1> 
   <form action="/" method="post" class="task-form">
    <input type="text" name="task" placeholder="Enter your task">
    <input type="text" name="type" placeholder="type(Today/work)">
    <button type="submit">Add</button>
   </form>
   <div class="task-holder">
    <% if (locals.todaysList) { %>
        <% todaysList.forEach(task => { %>
            <div class="task-item">
                <input type="checkbox" name="check">
                <p><%= task %></p>
                <br>
            </div>
        <% }) %>
    <% } %>
   </div>
    </div>
    <footer class="footer">Copyright &#169;<span class="footerr"></span></footer>
    <script src="js/app.js"></script>
</body>
</html>